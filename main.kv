<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    Label:
        font_size: 60
        size_hint: None, None
        center_x: root.width * 0.5
        center_y: root.height - 130
        text: "Amplitude"
        color: 1, 1, 1, 1

    Slider
        size_hint: None, None
        width: root.width - 40
        background_width: 20
        center_x: root.width * 0.5
        center_y: root.height - 130 - 80
        step: 1
        min: 0
        max: 100
        value_track: True
        value_track_color: 0.004, 0.451, 0.506, 1
        orientation: "horizontal"
        on_value: root.amplitudeChange(self.value)

    Label:
        font_size: 60
        size_hint: None, None
        center_x: root.width * 0.5
        center_y: root.height - 380
        text: "Frequency"
        color: 1, 1, 1, 1

    Slider
        size_hint: None, None
        width: root.width - 40
        background_width: 20
        center_x: root.width * 0.5
        center_y: root.height - 380 - 80
        step: 1
        min: 0
        max: 100
        value_track: True
        value_track_color: 0.004, 0.451, 0.506, 1
        orientation: "horizontal"
        on_value: root.frequencyChange(self.value)

    DPEAButton:
        size: 400, 200
        center_x: 200 + 20
        center_y: 120
        background_color: 0,0,0,0
        color: 0.545, 0, 0, 1
        text: "Start"
        font_size: 40
        on_press: root.start()


    DPEAButton:
        size: 400, 200
        center_x: root.width - 200 - 20
        center_y: 120
        background_color: 0,0,0,0
        color: 0.545, 0, 0, 1
        text: "Disable"
        font_size: 40
        on_press: root.stop()