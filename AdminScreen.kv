<AdminScreen>:
    name: 'admin'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        # background_color: 0,0,0,0
        color: 0.004, 0.451, 0.506, 1
        text: "Quit"
        on_press: root.exit_program()

    DPEAButton:
        size: 175, 100
        center_x: root.width * 0.35
        center_y: root.height * 0.5
        color: 0.004, 0.451, 0.506, 1
        text: "Back to Game"
        on_press: root.transition_back()

    DPEAButton:
        size: 250, 100
        center_x: root.width * 0.68
        center_y: root.height * 0.5
        color: 0.004, 0.451, 0.506, 1
        text: "Shutdown"
        on_press: root.shutdown()