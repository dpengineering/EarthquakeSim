<MainScreen>:


    name: 'main'
    FloatLayout:
        size_hint: None, None

    Slider
        id: speed_slider_1
        center_y: root.height * 0.3
        min: 50
        max: 3200
        step: 100
        orientation: "horizontal"
        text: "position"
        sensitivity: 'handle'
        on_value: root.speed_change()

    Label:
        size: 50, 50
        id: speed_sliderPosition
        x: root.width * -.45
        y: root.height * .40
        text: "double motor speed " + str(speed_slider_1.value)
        color: .5, .25, .25, 1

    Slider
        id: speed_slider_2
        center_y: root.height * -0.5
        step: .05
        max: .120
        min: .80
        orientation: "horizontal"
        text: "position"
        sensitivity: 'handle'

    Label:
        size: 50, 50
        id: speed_sliderPosition
        x: root.width * -.45
        y: root.height * -.40
        text: str(speed_slider_2.value)
        color: .5, .25, .25, 1

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "soft_stop"
        on_press: root.soft_stop()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .3, .4, .5, 1
        text: "move_both"
        on_press: root.move_both()

    DPEAButton:
        # Quit button
        size: 50, 50
        center_x: root.width * 0.99
        center_y: root.height * 0.01
        background_color: 0,0,0,0
        color: 0, 0, 0, 1
        text: ""
        on_press: root.exit_program()


    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.75
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "reverses the thing"
        on_press: root.rayne_test_thing_back()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "free all"
        on_press: root.free_all_steppers()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "increase by 10%"
        on_press: root.add_10()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "decrease by 10%"
        on_press: root.subtract_10()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "does the thing"
        on_press: root.rayne_test_thing()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.75
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "does the thing"
        on_press: root.rayne_test_thing()
